@model ChangePasswordViewModel

@{
    Layout = "_Layout.Account";

    ViewData["Title"] = "Change Password";
}

<div class="login-box">

    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

    @if (Model != null && !String.IsNullOrEmpty(Model.StatusMessage))
    {
        var statusMessageClass = Model.StatusMessage.StartsWith("Error") ? "danger" : "success";
        <div class="alert alert-@statusMessageClass alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            @Model.StatusMessage
        </div>
    }

    <form asp-route-returnurl="@ViewData["ReturnUrl"]">

        <div class="login-box-body">

            <p class="login-box-msg">Change you password </p>

            <div class="form-group has-feedback">
                <input class="form-control" asp-for="OldPassword" placeholder="Type old password" />
                <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                <span asp-validation-for="OldPassword" class="text-danger"></span>
            </div>
            <div class="form-group has-feedback">
                <input class="form-control" asp-for="NewPassword" placeholder="Type new Password" />
                <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>
            <div class="form-group has-feedback">
                <input class="form-control" asp-for="ConfirmPassword" placeholder="Retype new password" />
                <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>


            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-block btn-flat">Submit</button>
            </div>

            <hr />

            <a class="text-center" href="~/admin/">Return to admin</a>

        </div>

    </form>

</div>



@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
