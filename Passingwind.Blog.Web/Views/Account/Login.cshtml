@model LoginViewModel
@inject SignInManager SignInManager
@inject AdvancedSettings  advancedSettings

@{
    Layout = "_Layout.Account";

    ViewData["Title"] = "Log in";
}


<div class="login-box">

    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>


    <form asp-route-returnurl="@ViewData["ReturnUrl"]">

        <div class="login-box-body">

            <p class="login-box-msg">Sign in to start your session</p>

            <div class="form-group has-feedback">
                <input type="text" class="form-control" asp-for="UserName" placeholder="UserName" />
                <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group has-feedback">
                <input type="password" class="form-control" asp-for="Password" placeholder="Password" />
                <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col-xs-8">
                    <div class="checkbox icheck">
                        <label asp-for="RememberMe">
                            <input type="checkbox" asp-for="RememberMe">   Remember Me?
                        </label>
                    </div>
                </div>
                <div class="col-xs-4">
                    <button type="submit" class="btn btn-primary btn-block btn-flat">Log in</button>
                </div>
            </div>

            <hr />

            <a asp-route="home" class="text-center">Return to home page</a>

            <!-- <a href="#">Forgot your password?</a><br> -->

            @if (advancedSettings.EnableRegister)
            {
                <a asp-action="register" class="text-center">Register a new membership</a>
            }

        </div>

    </form>

</div>


@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
