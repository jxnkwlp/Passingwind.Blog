@model IList<string>

@if (Model != null && Model.Any())
{
    <div class="entry-category">
        Tags:
        @for (int i = 0; i < Model.Count; i++)
        {
            <a asp-route="tags" asp-route-tags="@Model[i]">@Model[i]</a>

            @if (i != Model.Count - 1)
            {
                <text>,</text>
            }
        }
    </div>
}
