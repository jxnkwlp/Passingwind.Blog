@{
	ViewData["Title"] = "Register";
}
@model RegisterViewModel

<div class="row">
	<div class="col-6 ">
		<h4>Register</h4>
		<hr />

		<form asp-route-returnUrl="@(Context.Request.Query["ReturnUrl"])" method="post">

			<div asp-validation-summary="All" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="Email"></label>
				<input asp-for="Email" class="form-control" />
				<small><span asp-validation-for="Email" class="text-danger"></span></small>
			</div>
			<div class="form-group">
				<label asp-for="Password"></label>
				<input asp-for="Password" class="form-control" />
				<small><span asp-validation-for="Password" class="text-danger"></span></small>
			</div>
			<div class="form-group">
				<label asp-for="ConfirmPassword"></label>
				<input asp-for="ConfirmPassword" class="form-control" />
				<small><span asp-validation-for="ConfirmPassword" class="text-danger"></span></small>
			</div>
			<button type="submit" class="btn btn-primary">Register</button>
		</form>
	</div>
</div>
