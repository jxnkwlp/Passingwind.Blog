@model IList<CategoryModel>

@if (Model != null && Model.Any())
{
    <span class="entry-category">
		<span class="fa fa-list-ul"></span>
        @for (int i = 0; i < Model.Count(); i++)
        {
            <a href="~/category/@Model[i].Slug" data-slug="@Model[i].Slug">@Model[i].Name</a>
            @if (i != Model.Count() - 1)
            {
                <text>,</text>
            }
        }
    </span>
}
