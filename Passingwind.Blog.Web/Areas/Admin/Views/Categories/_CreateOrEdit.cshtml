
@model CategoryViewModel


<div class="form-horizontal" role="form">
    <div class="form-group">
        <label class="col-sm-2 control-label" asp-for="Name"></label>
        <div class="col-sm-4">
            <input type="text" class="form-control" placeholder="category name" asp-for="Name">
        </div>
        <div class="col-sm-3">
            <span asp-validation-for="Name" class="help-block text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label" asp-for="Slug"></label>
        <div class="col-sm-4">
            <input type="text" class="form-control" asp-for="Slug">
        </div>
        <div class="col-sm-3">
            <span asp-validation-for="Slug" class="help-block"></span>
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label" asp-for="Description"></label>
        <div class="col-sm-4">
            <textarea class="form-control" asp-for="Description"></textarea>
        </div>
        <div class="col-sm-3">
            <span asp-validation-for="Description" class="help-block"></span>
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label" asp-for="DisplayOrder"></label>
        <div class="col-sm-4">
            <input class="form-control" placeholder="category name" asp-for="DisplayOrder">
        </div>
        <div class="col-sm-3">
            <span asp-validation-for="DisplayOrder" class="help-block"></span>
        </div>
    </div>


    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">Submit</button>
        </div>
    </div>
</div>