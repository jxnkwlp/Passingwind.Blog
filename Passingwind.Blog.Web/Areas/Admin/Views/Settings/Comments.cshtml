@{
    ViewBag.Title = "Comments ";
}

@model CommentsSettings


<div class="page-header">
    <h1>Comments </h1>
</div>

<div class="row">
    <div class="col-md-6">

        <div class="form " role="form">

            <form asp-route="">

                <div class="form-group">
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" asp-for="EnableComments" /> @Html.DisplayNameFor(t => t.EnableComments)
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" asp-for="EnableCommentsModeration" /> @Html.DisplayNameFor(t => t.EnableCommentsModeration)
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" asp-for="TrustAuthenticatedUsers" /> @Html.DisplayNameFor(t => t.TrustAuthenticatedUsers)
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" asp-for="CommentNestingEnabled" /> @Html.DisplayNameFor(t => t.CommentNestingEnabled)
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" asp-for="ShowComments" /> @Html.DisplayNameFor(t => t.ShowComments)
                        </label>
                    </div>
                </div> 
                <div class="form-group">
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" asp-for="SendEmail" /> @Html.DisplayNameFor(t => t.SendEmail)
                        </label>
                    </div>
                </div>

                <!--
                <div class="form-group">
                    <label class="control-label" asp-for="DefaultAvatar"></label>
                    <input class="form-control" placeholder="" asp-for="DefaultAvatar">
                    <span asp-validation-for="DefaultAvatar" class="text-danger"></span>
                </div>-->

                <div class="form-group">
                    <div class="">
                        <button type="submit" class="btn btn-default">Submit</button>
                    </div>
                </div>

            </form>

        </div>

    </div>
</div>