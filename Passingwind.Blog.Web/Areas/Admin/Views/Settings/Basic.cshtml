@{
    ViewBag.Title = "Basic ";
}

@model BasicSettings


<div class="page-header">
    <h1>Basic </h1>
</div>

<div class="row">
    <div class="col-md-6">

        <div class="form " role="form">

            <form asp-route="">

                <div class="form-group">
                    <label class="control-label" asp-for="Title"></label>
                    <input class="form-control" placeholder="" asp-for="Title">
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label class="control-label" asp-for="Description"></label>
                    <textarea class="form-control" placeholder="" asp-for="Description"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label class="control-label" asp-for="PageShowCount"></label>
                    <input class="form-control" asp-for="PageShowCount">
                    <span asp-validation-for="PageShowCount" class="text-danger"></span>
                </div>

                <div class="checkbox">
                    <label>
                        <input type="checkbox" asp-for="ShowDescription" /> @Html.DisplayNameFor(t => t.ShowDescription)
                    </label>
                </div>

                <div class="form-group">
                    <label class="control-label" asp-for="ShowDescriptionStringCount"></label>
                    <input class="form-control" asp-for="ShowDescriptionStringCount">
                    <span asp-validation-for="ShowDescriptionStringCount" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label class="control-label" asp-for="IcpNumber"></label>
                    <input class="form-control" placeholder="" asp-for="IcpNumber">
                    <span asp-validation-for="IcpNumber" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <div class="">
                        <button type="submit" class="btn btn-default">Submit</button>
                    </div>
                </div>

            </form>

        </div>

    </div>
</div>