@{
    ViewBag.Title = "Comment Reply";
}
@model CommentViewModel



<div class="page-header">
    <h1>Comment Details</h1>
</div>

<blockquote>
    <p>@Model.Content</p>
</blockquote>

<div class="form-horizontal" role="form">
    <div class="form-group">
        <label class="col-sm-2 control-label" asp-for="Author"></label>
        <div class="col-sm-10">
            <p class="form-control-static">@Model.Email</p>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label" asp-for="Email"></label>
        <div class="col-sm-10">
            <p class="form-control-static">@Model.Email</p>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label" asp-for="Website"></label>
        <div class="col-sm-10">
            <p class="form-control-static">@Model.Website</p>
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label" asp-for="CreationTime"></label>
        <div class="col-sm-10">
            <p class="form-control-static">@Model.CreationTime</p>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label" asp-for="IP"></label>
        <div class="col-sm-10">
            <p class="form-control-static">@Model.IP</p>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label" asp-for="PostId"></label>
        <div class="col-sm-10">
            <p class="form-control-static">@Model.Post.Title </p>
        </div>
    </div>

    <form asp-action="Reply" asp-route-id="@Model.Id">

        <div class="form-group">
            <label class="col-sm-2 control-label" asp-for="ReplyContent"></label>
            <div class="col-sm-6">
                <textarea class="form-control" asp-for="ReplyContent" rows="5"></textarea>
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-10 col-sm-offset-2">
                <button type="submit" class="btn btn-default">Submit</button>
            </div>
        </div>

    </form>


</div>

