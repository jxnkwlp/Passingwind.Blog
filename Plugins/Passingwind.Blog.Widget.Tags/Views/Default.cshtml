@using Passingwind.Blog.Widget.Tags.Models;

@model IList<TagsViewModel>

<aside class="widget">
	<h2 class="widget-title">Tags</h2>
	<div class="tagcloud">
		@foreach (var item in Model)
		{ 
			<text>
				<a asp-route="tags" asp-route-name="@item.Name" class="tag-link" title="@item.Count topics" style="font-size: 16px;">@item.Name </a>
			</text>
		} 
	</div>
</aside>