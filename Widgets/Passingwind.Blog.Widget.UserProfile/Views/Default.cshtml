@{
    Layout = null;
}
@using Passingwind.Blog.Widget.UserProfile.Models
@model WidgetViewModel

<aside class="widget">
    <h4 class="widget-title">@(Model.Title)</h4>
    <div class="widget-body widget-userprofile">
        <ul class="">
            <li><i class="fa fa-envelope-o" aria-hidden="true"></i> @Model.Email</li>
            @if (!string.IsNullOrWhiteSpace(Model.Bio))
            {
                <li>
                    <div class="alert alert-secondary" role="alert">
                        @Model.Bio
                    </div>
                </li>
            }
        </ul>
    </div>
</aside>
