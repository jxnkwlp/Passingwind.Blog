@using Passingwind.Blog.Widget.PageList.Models;
@{
	Layout = null;
}

@model WidgetViewModel


<aside class="widget">
	<h2 class="widget-title">@Model.Title</h2>
    <div class="widget-body">
        <ul class="widget-link-list">
            @foreach (var item in Model.List)
            {
                <text>
                    <li><a asp-route="page" asp-route-slug="@item.Slug">@item.Title</a></li>
                </text>
            }
        </ul>
    </div>
</aside>
