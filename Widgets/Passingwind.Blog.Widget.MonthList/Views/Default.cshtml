@using Passingwind.Blog.Widget.MonthList.Models;
@{
	Layout = null;
}

@model WidgetViewModel


<aside class="widget widget-archives">
	<h2 class="widget-title">@(Model.Title)</h2>
    <ul class="widget-archives-list">
        @for (int i = 0; i < Model.List.Length; i++)
        {
            var yearCount = Model.List[i];

            <li class="@(i==0? "show" : "" )">
                <h3 onclick="toggleWidgetArchiveShow(this)">@(yearCount.Year)</h3>
                <ul >
                    @foreach (var item in yearCount.List)
                    {
                        <li><a asp-route="month" asp-route-year="@item.DateTime.Year" asp-route-month="@item.DateTime.Month.ToString("00")">@item.Title </a>&nbsp;(@item.Count)</li>

                    }
                </ul>
            </li>
        }

    </ul>
</aside> 
